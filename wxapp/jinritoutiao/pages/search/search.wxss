/* pages/search/search.wxss */
page {
    width: 100%;
    height: 100%;
    background-color: #fff;
  
}
.container {
    margin: 0;
    padding: 0;
    width: 100%;
    height: 100%;
    overflow: hidden;
    box-sizing: border-box;
    background-color: #fff;
   
    
    
}

.weui__hd{
    margin: 0;
    padding: 0;
    height:90rpx;
    width: 100%;
    overflow: hidden;
    display: flex;
    align-items: center;
    border-bottom: 1px solid #f3f3f3;

}
.weui-search-bar__box{
   width: 80%;
   height: 60rpx; 
   margin-left: 18rpx;
   background-color: #f5f5f5;
   border-radius: 5px;
   display: flex;
   align-items: center;
}
.weui-icon-search_in-box{
    margin-left: 10rpx;
    height: 30rpx;
    width: 30rpx;
    
}
.weui-search-bar__input{
    margin-left: 10rpx;
    font-size: 14px;
 

}
.weui-cancel__search {
    width: 10%;
    font-size: 14px;
    margin:auto 5% auto 5%;
    text-align: center;
    color: #7abbe2;
}
.weui__bd {
    width: 100%;
   
   
    top: 90rpx;
    overflow: hidden; 
    border-bottom: 1px solid #f3f3f3;  
}
.weui-history {
   width: 100%;
   height: 100rpx;
   display: flex;
   align-items: center;
   border-bottom: 1px solid #f3f3f3; 
}
.weui-history__left {
    margin-left: 30rpx;
    color: #979797;
    
}
.weui-history__right {
    width: 40rpx;
    height: 45rpx;
    margin-left: 500rpx;
    
}
.weui-search-history {
    height: 110rpx;
    display: inline-block;
    line-height: 110rpx;
    padding-left: 20rpx;
    width: 50%;
    border-right: 1px solid #f3f3f3;
}

.weui__ft {
    width: 100%;
    

    
    
    overflow: hidden;
    border-bottom: 1rpx solid #e8e8e8;
    background: #fff;
}
.weui-hotwords {
    height: 50rpx;
    color: #989898;
    font-size: 16px;
    line-height: 50rpx;
    padding: 15rpx 20rpx 15rpx 20rpx;

}
.weui-list-text {
    display: flex;
    
    flex-wrap: wrap;
    border-bottom: 1px solid #e8e8e8;
    box-sizing: border-box;
}
.weui-list-text .list-item {

}

.weui-list-text .list-item.event {
    border-top: 1px solid #e8e8e8;
    border-right: 1px solid #e8e8e8;
    
    width: 50%;
}
.weui-list-text .list-item.odd {
    border-top: 1px solid #e8e8e8;
    padding-right: 0;

    
}
.weui-list-text .list-item .list-item-text {
    padding-left: 20rpx;
    float: left;
    width: 350rpx;
    height: 90rpx;
    line-height: 90rpx;
    overflow: hidden;
} 