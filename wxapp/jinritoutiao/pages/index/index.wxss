page {
  height: 1005px;
}
.container {
  height: 100%;
  box-sizing: border-box;
}
.topbar {
  position: fixed;
  height: 80rpx;
  display: flex;
  align-items: center;
  border-bottom: 1px solid #e7e7e7;
  
}

.topbar-icon.left {
 
  width: 80rpx;
  height: 80rpx;
  float: left;
 
  }
.topbar-icon__img {
 width: 40rpx;
 height: 40rpx;
 margin: 20rpx;
}
.topbar-icon.right {
  position: fixed;
  width: 160rpx;
  height: 80rpx;
  right: 0;
  box-shadow: -5px 0 4px -4px rgba(0,0,0,0.3);
  background-color: #ffffff;
  z-index: 10;
}
.topbar-addmore-icon__img {
  float: left;
  
}
.topbar-userinfo-icon__img {
  float: right;
  
}

.topbar-scroll {
  position: fixed;
  top: 0;
  left:80rpx;
  right: 160rpx;
  z-index: 4;
  border-bottom: 1px solid #ececec;
  height: 80rpx;
  font-size: 16px;
  white-space: nowrap;
}
.topbar-scroll-item {
  display: inline-block;
  width: calc(750rpx / 7);
  height: 100%;
  
 
}
.topbar-scroll-item.on {
  z-index: 10;
  color: red;
  border-bottom: 1px solid red;
 
  
}
.topbar-item-wrap {
  line-height: 80rpx;
  text-align: center;
  
}
.contents {
  height: 100%;
  width: 100%;
  position: fixed;
  top: 80rpx;
 
}
.content {
  height: 200rpx;
  text-align: center;
  margin: auto 0;
  border-bottom: 1px solid #f8f8f8;
}
.addchannel {
 
  width: 100%;
  height: 100%;
  z-index: 999;
  background: #ffffff; 
  position: fixed;
  
  
}
.addchannel .back {
 
  height: 80rpx;
  background: #ffffff;
  padding-top: 25rpx;
  padding-left: 30rpx;
  border-bottom: 1px solid #e7e7e7;
  

}
.addchannel .back image {
  height: 50rpx;
  width: 50rpx;
  top: 20rpx;
  left: 20rpx;

} 

.channel-scroll {
  position: fixed;
  
  height: 100%;
  width: 100%;
}
.channel-description {
  font-size: 20px;
}
.channel-description text {
  font-size: 14px;
  color: #e2e2e2;
}

.channel-choose {
  width: 20%;
  height: 80rpx;
  background-color: #f5f5f5;
  display: inline-block;
  font-size: 16px;
  margin: 2.5%;
  text-align: center;
  border-radius: 5%;
  white-space: nowrap;

}
 .channel-choose text {
  line-height: 80rpx;

}
.channel-description.other {
  margin-top: 40rpx;
}