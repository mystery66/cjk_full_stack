page {
  height: 1005px;
}
.container {
  height: 100%;
  box-sizing: border-box;
}
.topbar {
  position: fixed;
  height: 80rpx;
  display: flex;
  align-items: center;
  border-bottom: 1px solid #e7e7e7;
  z-index: 10;
  background: #ffffff;
  
}

.topbar-icon.left {

  width: 80rpx;
  height: 80rpx;
  float: left;
 
  }
.topbar-icon__img {
 width: 40rpx;
 height: 40rpx;
 margin: 20rpx;
}
.topbar-icon.right {
  position: fixed;
  width: 160rpx;
  height: 80rpx;
  right: 0;
  box-shadow: -5px 0 4px -4px rgba(0,0,0,0.3);
  background-color: #ffffff;
  z-index: 10;
}
.topbar-addmore-icon__img {
  float: left;
  
}
.topbar-userinfo-icon__img {
  float: right;
  
}

.topbar-scroll {
  position: fixed;
  top: 0;
  left:80rpx;
  right: 160rpx;
  z-index: 4;
  border-bottom: 1px solid #ececec;
  height: 80rpx;
  font-size: 16px;
  white-space: nowrap;
  background: #ffffff;
}
.topbar-scroll-item {
  display: inline-block;
  width: 70rpx;
  height: 95%;
  margin-left: 20rpx;
  margin-right: 20rpx;
  line-height: 80rpx;
  
 
}
.topbar-scroll-item.on {
  
  color: red;
  border-bottom: 1px solid red;
 
  
}
.topbar-item-wrap {
  line-height: 80rpx;
  text-align: center;
  font-size: 12pt;
  
}

.addchannel {
 
  width: 100%;
  height: 100%;
  z-index: 999;
  background: #ffffff; 
  position: fixed;
  
  
}
.addchannel .back {
 
  height: 80rpx;
  background: #ffffff;
  padding-top: 25rpx;
  padding-left: 30rpx;
  border-bottom: 1px solid #e7e7e7;
  

}
.addchannel .back image {
  height: 50rpx;
  width: 50rpx;
  top: 20rpx;
  left: 20rpx;

} 

.channel-scroll {
  position: fixed;
  
  height: 1100rpx;
  width: 100%;
  
}
.channel-description {
  font-size: 20px;
}
.channel-description text {
  font-size: 14px;
  color: #e2e2e2;
  
}

.channel-choose {
  width: 20%;
  height: 80rpx;
  background-color: #f5f5f5;
  display: inline-block;
  font-size: 16px;
  margin: 2.5%;
  text-align: center;
  border-radius: 5%;
 

}
 .channel-choose text {
  line-height: 80rpx;

}
.channel-description.other {
  margin-top: 40rpx;
 
}
.swiper-channel-content {
  height: 100%;
  padding-top: 80rpx;
}
.swiper-item {
  display: block;
  overflow: hidden;
}
.ariticles {
  height: 100%;
  width: 100%;
}
.ariticle-detail {
  margin: 30rpx;
 
  /* display: flex; */
  overflow: hidden;
  border-bottom: 1px solid #f5f5f5;
  
}
.ariticle-detail-left {
  width: 64%;
  margin-right: 2%;
  display: inline-block;
}
.ariticle-detail-title {
 
 
  font-size: 12pt;
  text-align: left;
  display: inline-block;
  vertical-align: top;
  
  
}
.ariticle-detail-others {
  margin-top: 35rpx;
  font-size: 10pt;
  text-align: left;
}
.ariticle-detail-type {
  display: inline-block;
  font-size: 9pt;
}
.ariticle-detail-right {
  width: 34%;
  height: 180rpx;
  display: inline-block;
  vertical-align: top;
  margin-bottom: 30rpx;
}
.ariticle-detail-image {
  width: 100%;
  height: 100%;
}
.ariticle-detail-type {
  border: 1px solid #87a5b5;
  color: #87a5b5;
}
.ariticle-detail-from,.ariticle-detail-num {
  color: #979797;
  margin-left: 15rpx;
}
.video{
  height: 100%;
  width: 100%;
}
.videoplay {
  width: 100%;
  padding-top: 10rpx;
  background-color: #f2f6f0;
  border-bottom: 1px solid #f8f8f8;
}

.videoplay-img {
  width: 100%;
  height: 400rpx;
  display: block;
}
.videoplay-info {
  width: 100%;
  height: 100rpx;
  color:#212121;
  display: flex;
  justify-content: space-between;
 
  background-color: #fff;
  
}
.videoplay-info-left {
  
  font-size: 11pt;
  line-height: 100rpx;
 
  
}
.videoplay-info-img {
  margin-left: 30rpx;
  width: 60rpx;
  height: 60rpx;
  display: inline-block;
  vertical-align: middle;
  
  border-radius: 50%;
}
.videoplay-info-publisher {
  display: inline-block;
  vertical-align: middle;
  margin-left: 30rpx;
  height: 100rpx;
} 
.videoplay-info-right {
 
 line-height: 100rpx;
 font-size: 11pt;
 margin-right: 30rpx;
 

}
.videoplay-info-playback {
  margin-right: 40rpx;
}

.videoplay-info-icon {
  width: 40rpx;
  height: 40rpx;
  margin-right: 20rpx;
  vertical-align: middle;
}
