.container {
    height: 100rpx;
    width: 100%;
    display: flex;
    position: relative;
}
.content-hd {
  position: absolute;
  width: 100%;
  height: 50rpx;
  margin: 20rpx auto;
  text-align: center;
  justify-content: center;
  border-bottom: 1px solid #f8f8f8f8;
}
text {
    font-size: 16px;
    
}

.container::after {
  content:'';
  position: absolute;
  top: 35rpx;
  right: 30rpx;
  width: 20rpx;
  height: 25rpx;
  border: 3rpx solid #000;
  border-left-color: transparent;
  border-bottom-color: transparent;
  transform: rotate(45deg);
}